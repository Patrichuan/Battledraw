<?xml version="1.0" encoding="utf-8"?>

<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="patrichuan.battledraw">

    <application
        android:name=".BattleDrawApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.main.MainActivity"
            android:label="Main"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name=".activities.initial.InitialActivity"
            android:label="Initial"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name=".activities.waitingplayers.WaitingPlayersActivity"
            android:label="Main"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name=".activities.drawavatar.DrawAvatarActivity"
            android:label="Main"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
        </activity>

    </application>
</manifest>