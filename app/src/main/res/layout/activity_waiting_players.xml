<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/btnCreateRoom"
            android:text="CREATE ROOM"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_12sdp"
            android:minHeight="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:layout_above="@id/btnCreateRoom"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="ROOM CODE"
                        android:textAllCaps="true"
                        android:textSize="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_roomname"
                        android:text="XDFLR"
                        android:gravity="center"
                        android:textAllCaps="true"
                        android:textSize="@dimen/_20sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:padding="@dimen/_30sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_avatar_player6"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp" />

                    <ImageView
                        android:id="@+id/iv_avatar_player4"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp" />

                    <ImageView
                        android:id="@+id/iv_avatar_player1"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp" />

                    <ImageView
                        android:id="@+id/iv_avatar_player7"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp" />
                </RelativeLayout>

                <RelativeLayout
                    android:padding="@dimen/_30sdp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_avatar_player8"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp" />

                    <ImageView
                        android:id="@+id/iv_avatar_player2"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp" />

                    <ImageView
                        android:id="@+id/iv_avatar_player3"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp" />

                    <ImageView
                        android:id="@+id/iv_avatar_player5"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp" />
                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>